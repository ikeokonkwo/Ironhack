<!DOCTYPE html>
<html>
  <head>
    <title>Sandwichr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  </head>

  <body>
  	<h1> Sandwichr</h1>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <%end%>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <%end%>
    <%= yield %>
    <footer>
    	<p> Made with &hearts; at Ironhack</p>
    </footer>
  </body>
</html>
